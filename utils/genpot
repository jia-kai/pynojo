find ../stooj -name "*.pt" | python xgettext-pt.py > ptmsg.py

(cd ..; find . -name "*.py" | \
	xgettext -f - --from-code=UTF-8 --keyword=_  --keyword=_pl:1,2 -o -) > stooj/nls/stooj.pot

rm -f ptmsg.py

